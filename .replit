modules = ["nodejs-20", "swift-5.8", "dart-3.10", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["flutter"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter Web App"

[[workflows.workflow]]
name = "Flutter Web App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd apps/mobile/build/web && python3 -m http.server 5000 --bind 0.0.0.0"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "static"
build = ["bash", "-c", "cd apps/mobile && flutter build web --base-href '/'"]
publicDir = "apps/mobile/build/web"
